<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCakeEc</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-fixed-top">
        <div class="container">
          <nav class="nav navbar-nav navbar-left"><span>Nagano cake</span></nav>
          <!--カスタマーのログイン後のヘッダ-->
          <% if customer_signed_in? %>
            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to "マイページ", customer_path(current_customer) %></li>
              <li>　商品一覧 </li>
              <li>　カート </li>
              <li><%= link_to "ログアウト", destroy_customer_session_path, method: :delete %></li>
            </ul>
          <!--管理者のログイン後のヘッダ-->
          <% elsif admin_signed_in? %>
            <ul class="nav navbar-nav navbar-right">
              <li>　商品一覧</li>
              <li>　会員一覧</li>
              <li>　注文履歴一覧</li>
              <li>　ジャンル一覧</li>
              <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete %></li>
            </ul>
          <!--管理者とカスタマーのログイン前のヘッダ-->
          <% else %>
            <ul class="nav navbar-nav navbar-right">
              <li>　About </li>
              <li>　商品一覧 </li>
              <li>　新規登録 </li>
              <li><%= link_to "ログイン", new_customer_session_path %></li>
            </ul>
          <% end %>
        </div>
      </nav>
    </header>
    <div class="body">
      <div class="container">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
