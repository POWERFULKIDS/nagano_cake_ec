<h2>配送先登録/一覧</h2>

<%= form_for(@address, url: addresses_path) do |f| %>
	<h4>郵便番号(ハイフンなし)<%= f.text_field :postcode %></h4>
	<h4>住所<%= f.text_field :address %></h4>
	<h4>宛名<%= f.text_field :name %></h4>
	<%= f.submit '登録する' %>
<% end %>


<table class="table table-bordered">
	
	<tr>
		<th>郵便番号</th>
		<th>住所</th>
		<th>宛名</th>
		<th></th>
	</tr>

	<% @addresses.each do |address| %>
	<tr>
			<td><%= address.postcode %></td>
			<td><%= address.address %></td>
			<td><%= address.name %></td>
			<td>
				<%= link_to "編集する", edit_address_path(address.id), class: "btn-sm btn-success edit_book_37657"  %>

				<%= link_to "削除する", address_path(address.id), method: :delete, "data-confirm" => "本当に削除しますか？",class: "btn-sm btn-danger destroy_book_37657"  %>
			</td>
			
		<%end%>
	
	</tr>
    
</table>

</div>
<div class="address_page"><%= paginate @addresses %></div>