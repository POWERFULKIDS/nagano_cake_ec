<div class="row">
	<div class="col-xs-10 col-xs-offset-1">
		<h3><span style="background-color: #efefef">配送先編集</span></h3>

		<%= form_for(@address, url: address_path) do |f| %>
			<table class="table-index">
				<tbody>
					<tr height="35">
						<th>郵便番号(ハイフンなし)</th><td><%= f.text_field :postcode %></td>
					</tr>
					<tr height="35">
						<th>住所</th><td><%= f.text_field :address, :size=>'63' %></td>
					</tr>
					<tr height="35">
						<th>宛名</th><td><%= f.text_field :name %></td>
					</tr>
				</tbody>
			</table>
				<%= f.submit '変更を保存', class: "btn botan col-xs-2 col-xs-offset-6" %>
		<% end %>
	</div>
</div>