<div class="row">
	<div class="col-xs-10 col-xs-offset-1">
		<h3><span style="background-color: #efefef">注文履歴詳細</span></h3>
		<div class="orderindex col-xs-8">
			<h5><strong>注文情報</strong></h5>
			<table class="table" style="line-height: 30px;">
				<tr>
					<th>注文日</th>
					<td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
				</tr>
				<tr>
					<th>配送先</th>
					<td>〒<%= @order.postcode %>　<%= @order.address %><br>
						<%= @order.name %></td>
				</tr>
				<tr>
					<th>支払い方法</th>
					<td><%= @order.payment_method_i18n %></td>
				</tr>
				<tr>
					<th>ステータス</th>
					<td><%= @order.order_status_i18n %></td>
				</tr>
			</table>
		</div>

		<div class="orderindex-sum col-xs-4">
			<h5><strong>請求情報</strong></h5>
			<table class="table" style="line-height: 30px;" >
			<% total_price = 0 %>
				<tr>
					<th>商品合計</th>
					<% @order.ordered_products.each do |ordered_product| %>
						<% sum_price = (ordered_product.product.price * 1.10).round(0).to_i * (ordered_product.amount).to_i %>
						<% total_price = total_price + sum_price %>
					<% end %>
					<td><%= total_price %></td>
				</tr>
				<tr>
					<th>配送料</th>
					<td><%= @order.fee %></td>
				</tr>
				<tr>
					<th>ご請求額</th>
					<td><%= @order.total_payment %></td>
				</tr>
			</table>
		</div>

		<div class="orderindex-product col-xs-12">
			<h5><strong>注文内容</strong></h5>
			<table class="table table-hover">
				<thead>
					<tr>
						<th>商品</th>
						<th>単価(税込)</th>
						<th>個数</th>
						<th>小計</th>
					</tr>
				</thead>
				<tbody>
					<% @order.ordered_products.each do |ordered_product| %>
					<tr>
							<td><%= ordered_product.product.name %></td>
							<td><%= (ordered_product.product.price * 1.10).round(0).to_i %></td>
							<td><%= (ordered_product.amount).to_i %></td>
							<td><%= (ordered_product.product.price * 1.10).round(0).to_i * (ordered_product.amount).to_i %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
