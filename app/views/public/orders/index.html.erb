<div class="row">
	<div class="col-xs-12">
		<h3><span style="background-color: #efefef">注文履歴一覧</span></h3><br>

		<table class="table table-hover">
			<thead>
			<tr>
				<th class="col-xs-2">注文日</th>
				<th class="col-xs-4">配達先</th>
				<th class="col-xs-3">注文商品</th>
				<th class="col-xs-1">支払金額</th>
				<th class="col-xs-1">ステータス</th>
				<th class="col-xs-1">注文詳細</th>
			</tr>
		</thead>
		<tbody>
			<% @order.each do |order| %>
			<tr>
				<td><%= order.created_at.strftime("%Y/%m/%d") %></td>
				<td>〒 <%= order.postcode %> <%= order.address %><br>
					<%= order.name %>
				</td>
				<td>
					<% order.ordered_products.each do |ordered_product| %>
					<%= ordered_product.product.name %>
					<%end%>
				</td>
				<td><%= order.total_payment %></td>
				<td><%= order.order_status_i18n %></td>
				<td><%= link_to "表示する", order_path(order.id), class: "btn botan" %></td>
			</tr>
			<%end%>
		</tbody>
		</table>
	</div>
</div>
