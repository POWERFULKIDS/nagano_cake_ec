<h2>注文履歴一覧</h2>

<table class="table table-bordered">
	<tr>
		<th>注文日</th>
		<th>配達先</th>
		<th>注文商品</th>
		<th>支払金額</th>
		<th>ステータス</th>
		<th>注文詳細</th>
	</tr>
	<% @order.each do |order| %>
	<tr>
		<td><%= order.created_at %></td>
		<td><%= order.address %></td>
		<td>
			<% order.ordered_products.each do |ordered_product| %>
			<%= ordered_product.product.name %>
			<%end%>
		</td>
		<td><%= order.total_payment %></td>
		<td>
			<% if order.order_status == 0 %>
				入金待ち
			<% elsif order.order_status == 1 %>
				入金確認
			<% elsif order.order_status == 2 %>
				製作中
			<% else%>
				発送準備
			<% end %>
		</td>
		<td>
			<%= link_to "表示する", order_path(order.id)%>
		</td>
	</tr>
	<%end%>
</table>