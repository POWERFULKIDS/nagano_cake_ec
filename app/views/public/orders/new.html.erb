<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <h3><span style="background-color: #efefef">注文情報入力</span></h3>

    <div class="payment-method">
      <h4>支払い方法</h4>
      <%= form_with model: @order, url:orders_comfirm_path, local:true do |f| %>
        <label class="radio-button"><%= f.radio_button :payment_method, :card ,checked: true %>　クレジットカード</label><br>
        <label class="radio-button"><%= f.radio_button :payment_method, :transfer %>　銀行振込</label>
    </div>

    <div class="sent-address">
        <h4>お届け先</h4>
        <label class="radio-button"><%= f.radio_button :address1, 0 ,checked: true %><strong>　ご自身の住所</strong></label><br>
        <div class="address">〒 <%= current_customer.postcode %>,<%= current_customer.address %><br>
          <%= current_customer.last_name %><%= current_customer.first_name %><br>
        </div>

        <label class="radio-button"><%= f.radio_button :address1, 1 %><strong>　登録済み住所から選択</strong></label><br>
        <div class="address"><%= f.collection_select :address_id, Address.where(customer_id: current_customer.id), :id, :address, include_blank: "選択して下さい" %></div>

        <label class="radio-button"><%= f.radio_button :address1, 2 %><strong>　新しいお届け先</strong></label><br>

        <ul class="address-new">
          <li>
            <label><%= f.label :postcode, "郵便番号" %><br><p>(ハイフンなし)</p></label>
            <%= f.text_field :postcode, :size=>"30", class: "new-address" %>
          </li>
          <li>
            <label><%= f.label :address, "住所" %></label>
            <%= f.text_field :address, :size=>"45", class: "new-address" %>
          </li>
          <li>
            <label><%= f.label :name, "宛名" %></label>
            <%= f.text_field :name, :size=>"30", class: "new-address"  %>
          </li>
        </ul>
        <%= f.submit '確認画面へ進む', class: "btn next col-xs-3 pull-right" %>

      <% end %>
    </div>
  </div>
</div>
