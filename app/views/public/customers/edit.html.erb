<h3>登録情報編集</h3>
<%= form_for(@customer) do |f| %>
	<table class='table'>
		<tbody>
			<tr>
				<td>名前</td>
				<td>
					<div class="field row">
					    <%= f.label :'(姓)　' %>
					    <%= f.text_field :last_name, autofocus: true, autocomplete: "姓" %>
					    <%= f.label :'(名)' %>
					    <%= f.text_field :first_name, autofocus: true, autocomplete: "名" %>
					</div>
				</td>
			</tr>
			<tr>
				<td>フリガナ</td>
				<td>
					<div class="field row">
					    <%= f.label :'(セイ)' %>
					    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "セイ" %>
					    <%= f.label :'(メイ)' %>
					    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "メイ" %>
					</div>
				</td>
			</tr>
			<tr>
				<td>メールアドレス</td>
				<td>
					<div class="field row">
					    <%= f.text_field :email, autofocus: true, autocomplete: "メールアドレス" %>
					</div>
				</td>
			</tr>
			<tr>
				<td>郵便番号(ハイフンなし)</td>
				<td>
					<div class="field row">
					    <%= f.text_field :postcode, autofocus: true, autocomplete: "郵便番号" %>
					</div>
				</td>
			</tr>
			<tr>
				<td>住所</td>
				<td>
					<div class="field row">
					    <%= f.text_field :address, autofocus: true, autocomplete: "住所" %>
					</div>
				</td>
			</tr>
			<tr>
				<td>電話番号(ハイフンなし)</td>
				<td>
					<div class="field row">
					    <%= f.text_field :phone, autofocus: true, autocomplete: "住所" %>
					</div>
				</td>
			</td>
		</tbody>
	</table>
	<div class="actions row">
		<%= f.submit '編集内容を保存する', class: "btn btn-primary" %>
	</div>
<% end %>