<div class="row">
    <div class="col-xs-10 col-xs-offset-1">
		<h3><span style="background-color: #efefef">登録情報編集</span></h3><br>
		<%= form_for(@customer) do |f| %>
			<table class='table'>
				<tbody>
					<tr>
						<td>名前</td>
						<td>
							<div class="field row">
							    <%= f.text_field :last_name, autofocus: true, autocomplete: "姓", placeholder: "姓" %>
							    <%= f.text_field :first_name, autofocus: true, autocomplete: "名", placeholder: "名" %>
							</div>
						</td>
					</tr>
					<tr>
						<td>フリガナ</td>
						<td>
							<div class="field row">
							    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "セイ", placeholder: "セイ" %>
							   <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "メイ", placeholder: "メイ" %>
							</div>
						</td>
					</tr>
					<tr>
						<td>メールアドレス</td>
						<td>
							<div class="field row">
							    <%= f.text_field :email, autofocus: true, autocomplete: "メールアドレス" %>
							</div>
						</td>
					</tr>
					<tr>
						<td>郵便番号(ハイフンなし)</td>
						<td>
							<div class="field row">
							    <%= f.text_field :postcode, autofocus: true, autocomplete: "郵便番号" %>
							</div>
						</td>
					</tr>
					<tr>
						<td>住所</td>
						<td>
							<div class="field row">
							    <%= f.text_field :address, autofocus: true, autocomplete: "住所", :size=> "43" %>
							</div>
						</td>
					</tr>
					<tr>
						<td>電話番号(ハイフンなし)</td>
						<td>
							<div class="field row">
							    <%= f.text_field :phone, autofocus: true, autocomplete: "住所" %>
							</div>
						</td>
					</tr>
				</tbody>
			</table>
			<div class="row actions">
				<%= f.submit '編集内容を保存する', class: "btn botan col-xs-3 col-xs-offset-4" %>
				<%= link_to '退会する', customers_delete_page_path, class: "btn botan-customerdelete col-xs-2 pull-right" %>
			</div>
		<% end %>
	</div>
</div>