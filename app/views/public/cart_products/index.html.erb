<div class="row">
 <div class="col-xs-10 col-xs-offset-1">
    <h3 class="shoppingcart"><span style="background-color: #efefef">Shopping Cart</span></h3>
    <p class="all-destroy"><%= link_to  cart_products_destroy_all_path(@cart_products), method: :delete do %>
        <span class="glyphicon glyphicon-shopping-cart"> カートを空にする</span></p>
        <% end %>

    <table class="table cart-table">
        <thead>
            <tr>
                <th class="col-xs-5">商品名</th>
                <th class="col-xs-2">単価（税込）</th>
                <th class="col-xs-2">数量</th>
                <th class="col-xs-2">合計金額</th>
                <th class="col-xs-1"></th>
            </tr>
        </thead>


        <tbody>
        	<% total_price = 0 %>
            <% @cart_products.each do |cart_product| %>
                <tr>
                    <td><%= attachment_image_tag(cart_product.product, :image, :fill, 60, 60)%><%= cart_product.product.name %><%= cart_product.product.name %></td>
                    <td><%= (cart_product.product.price * 1.10).round(0)%></td>
                    <%= form_for(cart_product, url:cart_product_path(cart_product),method: :patch) do |f| %>
                        <td><%= f.select :amount,(1..20) %><%= f.submit "変更", class: "btn edit" %></td>
                    <% end %>
                    <% sum_price = cart_product.amount.to_i * (cart_product.product.price * 1.10).round(0).to_i %>
                    <% total_price = total_price + sum_price %>
                    <td>¥<%= sum_price %></td>
                    <td><%= link_to "削除する", cart_product_path(cart_product.id), method: :delete %></td>
                </tr>
            <% end %>
        </tbody>
    </table>

    <div class="cart-sum pull-right">
        <p class="total">合計金額</p>
        <h3 class="total-price"><%= total_price %>円</h3>
    </div>

    <p class="shopping"><%= link_to "<< 買い物を続ける", root_path %></p>
    <%= link_to "情報入力に進む", new_order_path, class: "btn next col-xs-3 col-xs-offset-7 pull-right" %></div>
</div>