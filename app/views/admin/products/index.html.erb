<h3>商品一覧</h3>
<div class="row">
	<div class="col-md-10 col-md-offset-1">
		<div class="pull-right">
			<%=link_to new_admin_product_path do %>
				<button type="button" class="btn btn-default btn-circle">＋</button>
			<% end %>
		</div>

		<table class="table table-hover">
			<thead>
				<tr>
					<th>商品ID</th>
					<th>商品名</th>
					<th>税抜価格</th>
					<th>ジャンル</th>
					<th>ステータス</th>
				</tr>
			</thead>
			<tbody>
				<% @product.each do |product| %>
					<tr>
						<td><%= product.id %></td>
			  			<td><%= link_to product.name, admin_product_path(product.id)%></td>
			  			<td><%= product.price %></td>
			  			<td><%= product.product_genre.name %></td>
			  			<td>
			  				<% if product.sale_status == true %>
		  						<p>販売中</p>
							<% else %>
		 						<p>売り切れ</p>
							<% end %>
						</td>
			 		</tr>
				<%end%>
			</tbody>
		</table>
	</div>
</div>


