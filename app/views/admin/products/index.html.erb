<h2>商品一覧</h2>


<table class="table table-hover">
	<tr>
		<th>商品ID</th>
		<th>商品名</th>
		<th>税抜価格</th>
		<th>ジャンル</th>
		<th>ステータス</th>
	</tr>
	<% @product.each do |product| %>
		<tr>
			<td><%= product.id %></td>
  			<td><%=  product.name%></td>
  			<td><%= product.body%></td>
  			<td><%= product.product_genre.name%></td>
  			<td><%= product.sale_status%></td>
 		</tr>
	<%end%>
</table>

<%=link_to "+", new_admin_product_path, class: "btn-{themecolor}.rounded-circle.p-0" %>