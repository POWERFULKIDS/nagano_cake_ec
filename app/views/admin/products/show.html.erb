<h3>商品詳細</h3>
<div class="row">

	<div class="col-lg-4">

		<%= attachment_image_tag(@product, :image, :fill, 200, 200,)%>
	</div>
	<div class="col-lg-4">
	<ul>
		<li>
			<h4>商品名  <%= @product.name%></h4>
		</li>
		<li>
			<h4>商品説明  <%= @product.body%></h4>
		</li>
		<li>
			<h4>ジャンル  <%= @product.product_genre.name%></h4>
		</li>
		<li>
			<h4>税込価格(税抜価格)  <%= (@product.price * 1.10).round(0)%>(<%= @product.price%>)円</h4>
		</li>
		<li>
			<h4>販売ステータス  
			<% if @product.sale_status == true %>
		  		販売中
			<% else %>
		 		売り切れ
			<% end %></h4>
		</li>
	</ul>
	</div>

</div>
<div class="row">
	<div class="col-lg-7"></div>
	<div class="col-lg-3">
<%=link_to "編集する", edit_admin_product_path, class: "btn btn-primary col-xs-10 col-xs-offset-1" %>
	</div>
</div>
