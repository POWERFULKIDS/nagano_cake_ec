<h3>商品新規登録</h3>

<%= form_for(@product, url: admin_products_path) do |f| %>

		<%= f.attachment_field :image %>

		<h4>商品名<%= f.text_field :name %></h4>

		<h4>商品説明<%= f.text_field :body %></h4>

			<h4>ジャンル<%= f.collection_select :product_genre_id, ProductGenre.all, :id, :name,:prompt => "選択して下さい" %>
</h4>

			<h4>税抜価格<%= f.text_field :price %></h4>

			<h4>販売ステータス<%= f.select :sale_status, [["販売中", "販売中"], ["販売停止中", "販売停止中"]], include_blank: "選択して下さい" %>
</h4>
<br>

		<%= f.submit '新規登録' %>
<% end %>