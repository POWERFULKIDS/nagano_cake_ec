
<h3>商品新規登録</h3><br>
<div class="row">
	<div class="col-md-10 col-md-offset-1">
		<%= form_for(@product, url: admin_products_path) do |f| %>

				<%= f.attachment_field :image, class: "col-xs-4"%>
				<ul class="product-new col-xs-8">
					<li class="name">
						 <label><%= f.label :商品名 %></label>
		          		<%= f.text_field :name, :size=>'30'%>
		       		 </li>
		       		 <li class="productnew-body">
						 <label><%= f.label :商品説明 %></label>
		          		<%= f.text_area :body, :size=>'30x10' %>
		       		 </li>
		       		 <li class="product_genre_id">
						 <label><%= f.label :ジャンル %></label>
		          		<%= f.text_field :product_genre_id, :size=>'30' %>
		       		 </li>
		       		 <li class="price">
						 <label><%= f.label :税抜価格 %></label>
		          		<%= f.text_field :price, :size=>'30' %>円
		       		 </li>
		       		 <li class="sale_status">
						 <label><%= f.label :販売ステータス %></label>
		          		<%= f.select :sale_status, [["販売中", "販売中"], ["販売停止中", "販売停止中"]], include_blank: "選択して下さい" %>
		       		 </li>
		       	</ul>
				<%= f.submit '新規登録', class: "btn botan col-xs-2 pull-right" %>
		<% end %>
	</div>
</div>

