<h1>商品新規登録</h1>

<%= form_for(@product, url: admin_products_path) do |f| %>

		<%= f.attachment_field :image %>

			<h4>商品名</h4>
		<%= f.text_field :name %>

			<h4>商品説明</h4>
		<%= f.text_field :body %>


			<h4>ジャンル</h4>
		<%= f.collection_select :product_genre_id, ProductGenre.all, :id, :name,:prompt => "選択して下さい" %>


			<h4>税抜価格</h4>
		<%= f.text_field :price %>

			<h4>販売ステータス</h4>
		<%= f.select :sale_status, [["販売中", "販売中"], ["販売停止中", "販売停止中"]], include_blank: "選択して下さい" %>

		<%= f.submit '新規登録' %>
<% end %>