<h3>編集画面</h3><br>
<div class="row">
	<div class="col-md-10 col-md-offset-1">
		<%= form_for(@product, url: admin_product_path) do |f| %>
			<div class="col-xs-2">
				<%= attachment_image_tag(@product, :image, :fill, 300, 300,)%>
				<%= f.attachment_field :image %>
			</div>
			<div class="col-xs-10">
				<ul class="product-show">
					<li>
						<label><strong>商品名</strong></label>
						<%= f.text_field :name, :size=>'35' %>
					</li>
					<li>
						<label><strong>商品説明</strong></label>
						<%= f.text_area :body, :size=>'35x10' %>
					</li>
					<li>
						<label><strong>ジャンル</strong></label>
						<%= f.collection_select :product_genre_id, ProductGenre.all, :id, :name, :prompt => "選択して下さい" %>
					</li>
					<li>
						<label><strong>税抜価格</strong></label>
						<%= f.text_field :price, :size=>'35' %>
					</li>
					<li>
						<label><strong>販売ステータス</strong></label>
						<%= f.select :sale_status, [["販売中", true], ["売り切れ", false]], include_blank: "選択して下さい" %>
					</li>
				</ul>
			</div>
			<%= f.submit('変更を保存',class: 'btn botan col-xs-2 pull-right') %>
		<% end %>
	</div>
</div>