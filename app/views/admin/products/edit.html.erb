<h3>編集画面</h3>
<br>
<%= form_for(@product, url: admin_product_path) do |f| %>
	<div class="row">
		<div class="col-lg-4">
			<%= attachment_image_tag(@product, :image, :fill, 200, 200,)%>
			<%= f.attachment_field :image %>
		</div>
		<div class="col-lg-4">
		<ul>
			<li>
				<h4>商品名</h4>
				<%= f.text_field :name %>
			</li>
			<li>
				<h4>商品説明</h4>
				<%= f.text_field :body %>
			</li>
			<li>
				<h4>ジャンル</h4>
				<%= f.collection_select :product_genre_id, ProductGenre.all, :id, :name,:prompt => "選択して下さい" %>
			</li>
			<li>
				<h4>税抜価格</h4>
				<%= f.text_field :price %>
			</li>
			<li>
				<h4>販売ステータス</h4>
				<%= f.select :sale_status, [["販売中", "販売中"], ["販売停止中", "販売停止中"]], include_blank: "選択して下さい" %>
			</li>
		</ul>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-7"></div>
		<div class="col-lg-3">
			<%= f.submit('変更を保存',class: 'btn btn-primary col-xs-10 col-xs-offset-1') %>
			
		</div>
	</div>
<% end %>