<h4>注文履歴一覧</h4>

<table class="table table-hover">
	<thead>
		<tr>
			<th>購入日時</th>
			<th>購入者</th>
			<th>注文個数</th>
			<th>注文ステータス</th>
		</tr>
	</thead>
	<tbody>
		<% @orders.each do |order| %>
			<tr>
				<td><%= link_to admin_order(order) do %><%= order.created_at %><% end %></td>
	  			<td><%= order.customer.first_name %><%= order.customer.last_name %></td>
	  			<td><%= @total_amount %></td>
	  			<td><%= order.order_status_i18n %></td>
	 		</tr>
		<%end%>
	</tbody>
</table>