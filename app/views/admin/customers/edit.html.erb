<h3><%= @customer.last_name%><%= @customer.first_name%>さんの会員情報編集</h3><br>

<div class="row">
	<div class="col-md-10 col-md-offset-1">
		<%= form_for(@customer, url: admin_customer_path) do |f| %>
			<ul>
				<li class="customer_id">
	          		<label><%= f.label :会員ID %></label>
	          		<%=@customer.id%>
	        	</li>
	        	<li class="last_name">
	          		<label><%= f.label :氏名 %></label>
	          		<%= f.text_field :last_name %><%= f.text_field :first_name%>
	        	</li>
	        	<li class="kana">
	          		<label><%= f.label :フリガナ %></label>
	          		<%= f.text_field :last_name_kana%><%= f.text_field :first_name_kana%>
	        	</li>
	        	<li class="postcode">
	          		<label><%= f.label :郵便番号 %></label>
	          		<%= f.text_field :postcode%>
	        	</li>
	        	<li class="admin-address">
	          		<label><%= f.label :住所 %></label>
	          		<%= f.text_field :address, :size=>'42' %>
	        	</li>
	        	<li class="phone">
	          		<label><%= f.label :電話番号 %></label>
	          		<%= f.text_field :phone %>
	        	</li>
	        	<li class="email">
	          		<label><%= f.label :メールアドレス %></label>
	          		<%= f.text_field :email %>
	        	</li>
	        	<li class="customer_status">
	          		<label><%= f.label :会員ステータス %></label>
	          		<%= f.radio_button :customer_status, :false %><label> 有効</label>
	          		<%= f.radio_button :customer_status, :true %><label>退会済み</label>
	        	</li>
				<%= f.submit '変更を保存する', class: "btn botan col-xs-4" %>
			</ul>
		<% end %>
	</div>
</div>
