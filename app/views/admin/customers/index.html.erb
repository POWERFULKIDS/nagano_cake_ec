<h2>会員一覧</h2>

<table class="table table-hover">
	<tr>
		<th>会員ID</th>
		<th>氏名</th>
		<th>メールアドレス</th>
		<th>ステータス</th>
	</tr>
	<tr>
		<% @customer.each do |customer| %>
			<td><%= customer.id%></td>
			<td>
				<%=link_to customer.last_name + customer.first_name, admin_customer_path(customer.id)%>
			</td>
			<td><%= customer.email%></td>
			<% if customer.customer_status == false %>
				<td>有効</td>
			<% else %>
				<td>退会済</td>
			<% end %>
		<% end %>
	</tr>
</table>