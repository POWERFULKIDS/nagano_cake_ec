<h3>会員一覧</h3><br>

<div class="row">
	<div class="col-md-10 col-md-offset-1">
<table class="table table-hover">
	<thead>
	<tr>
		<th>会員ID</th>
		<th>氏名</th>
		<th>メールアドレス</th>
		<th>ステータス</th>
	</tr>
</thead>
<tbody>
	<% @customer.each do |customer| %>
	<tr>
			<td><%= customer.id%></td>
			<td>
				<%=link_to customer.last_name + customer.first_name, admin_customer_path(customer.id)%>
			</td>
			<td><%= customer.email%></td>
			<% if customer.customer_status == false %>
				<td>有効</td>
			<% else %>
				<td>退会済</td>
			<% end %>
	</tr>
	<% end %>
</tbody>
</table>
</div></div>