<h3>ジャンル一覧・追加</h3><br>
<div class="row">
  <div class="col-md-6">
    <%= form_for(@genre,url: admin_product_genres_path) do |f| %>
      <label><%= f.label :ジャンル　 %></label>
      <%= f.text_field :name, :size=>'20' %>
      <%= f.radio_button :genre_status, :true,　checked: true %><label> 有効　</label>
      <%= f.radio_button :genre_status, :false %><label> 無効　</label>
      <%= f.submit "追加", class: "btn botan"%>
    <% end %>

  <table class="table table-hover genre-table">
    <thead>
      <tr>
        <th>ジャンル</th>
        <th>状態</th>
        <th></th>
      </tr>
    </thead>

    <% @genres.each do |product_genre|%>
      <tbody>
        <tr>
          <td><%= product_genre.name %></td>
          <td>
            <% if product_genre.genre_status == true %>
              <p>有効</p>
            <% else %>
              <p>無効</p>
            <% end %>
          </td>
          <td><%= link_to"編集する", edit_admin_product_genre_path(product_genre.id)%></td>
        </tr>
      </tbody>
    <% end %>
  </table>
</div>
</div>


